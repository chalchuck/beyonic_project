<%= devise_error_messages! %>

<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <h3>Change your password</h3><hr>

    <%= f.hidden_field :reset_password_token %>
    
    <div class="form-group">    
      <%= f.password_field :password, autofocus: true, autocomplete: 'off', placeholder: "New Password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: "Confirm new password", class: 'form-control' %>
    </div>

    <%= f.submit 'Change my Password', class: 'button right' %><br>

  <% end %>
</div>
