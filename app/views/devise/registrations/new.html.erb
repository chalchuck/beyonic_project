<%= devise_error_messages! %>
<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    
    <h3>Sign up</h3><hr>

    <div class="form-group">
      <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email Address", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :mobile_number, placeholder: "Mobile Number", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
    </div>
    <%= f.submit 'Sign up', :class => 'button right' %>
    <br>
  <% end %>
</div>
